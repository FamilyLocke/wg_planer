<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ameyering.wgplaner.wgplaner">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Read and Write App-internal Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
      
        <activity
            android:name=".section.splashscreen.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashScreen">
          
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
          
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="api.wgplaner.ameyering.de" />
            </intent-filter>
          
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="api.wgplaner.ameyering.de" />
            </intent-filter>
          
        </activity>
      
        <activity
            android:name=".section.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName=".section.splashscreen.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
      
        <activity
            android:name=".section.registration.RegistrationActivity"
            android:label=""
            android:parentActivityName=".section.splashscreen.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
  
        <service android:name=".utils.WGPlanerInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
      
        <service android:name=".utils.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".section.home.AddItemActivity"
            android:label="@string/add_item_activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".section.home.HomeActivity" />
      
        <activity
            android:name=".section.home.SetUpGroupActivity"
            android:label="@string/set_up_group_activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".section.home.HomeActivity"></activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/web_hi_res_512" />
  
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
      
    </application>

</manifest>
